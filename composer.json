{
    "name": "jeckel/codeception-gherkin-contexts",
    "description": "A collection of Codeception Helpers for Gherkin BDD tests",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien MERCIER-ROJAS",
            "email": "julien@jeckel-lab.fr"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Jeckel\\Gherkin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Jeckel\\Gherkin\\": "tests/unit/"
        }
    },
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "codeception/codeception": ">=2.5",
        "behat/behat": "^3.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.5",
        "squizlabs/php_codesniffer": "^3.4",
        "phpmd/phpmd": "^2.6",
        "mikey179/vfsStream": "^1.6"
    },
    "suggest": {
        "edno/codeception-gherkin-param": "The Codeception extension for supporting parameter notation in Gherkin scenario.",
        "flow/jsonpath": "Json path parser",
        "jeckel/clock": "Clock service with mock capability"
    }
}
